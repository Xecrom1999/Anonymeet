<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_contact_layout"
    android:orientation="vertical" android:layout_width="match_parent" android:layout_height="100dp">

    <RelativeLayout
        android:background="@drawable/press_effect"
        android:layout_width="match_parent"
        android:layout_height="80dp">

    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/contactImage"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Name-"
        android:layout_alignTop="@id/contactImage"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:textSize="20sp"
        android:id="@+id/contactName"
        android:layout_toRightOf="@id/contactImage"
        android:layout_alignParentRight="true"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="36dp"
        android:height="36dp"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:visibility="invisible"
        android:backgroundTint="#64DD17"
        android:id="@+id/alert"
        android:background="@drawable/alert"
        android:layout_below="@+id/contactName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/alert"
        android:layout_alignBottom="@id/alert"
        android:layout_marginRight="40dp"
        android:id="@+id/lastMessage"
        android:textSize="12sp"
        android:gravity="center"
        />

    </RelativeLayout>

    <View
        android:id="@+id/users_divider"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/users_messages_divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>


</LinearLayout>